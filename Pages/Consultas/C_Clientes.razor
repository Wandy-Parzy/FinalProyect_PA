@page "/c_clientes"

@*--------- Consulta Clientes ---------*@

@using Models;
@using ProyectoFinal.BLL

<EditForm Model="lista">

    <a type="button" class="rz-border-radius-4 shadow border border-1 btn-lg btn btn-warning" data-toggle="tooltip"
        data-placement="right" title="Registrar nuevo cliente" href="clientes">
        <label>+</label>
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-people-fill"
            viewBox="0 0 16 16">
            <path
                d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
        </svg>
    </a>

    <a type="button" class="rz-border-radius-1 shadow border border-1 btn-lg btn btn-reporte" style="position: absolute;  right:40px; margin-right: 30; " data-toggle="tooltip"
        data-placement="right" title="Reporte de clientes" href="reporteclientes">
        
        <label>Reporte </label><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-clipboard-check-fill" viewBox="0 0 16 16">
  <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3Zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3Z"/>
  <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5v-1Zm6.854 7.354-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708Z"/>
</svg>
    </a>
    <br />
    <p />

    <div class="card ">

        <div class="card-header">
            <h4>
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                    class="bi bi-card-checklist" viewBox="0 0 16 16">
                    <path
                        d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                    <path
                        d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z" />
                </svg> Consulta Clientes
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                    class="bi bi-people-fill" viewBox="0 0 16 16">
                    <path
                        d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                </svg>
            </h4>
        </div>

        <div class="card-body">
            <form>
                <div class="input-group d-flex align-items-end">

                    <div class="form-group col-md-3">
                        <InputSelect class="form-select text-14" @bind-Value="Filtro">
                            <option value="0" disabled selected>Seleccione un filtro</option>
                            <option value="0">Id</option>
                            <option value="1">Nombre</option>
                            <option value="2">Email</option>
                            <option value="3">Celular</option>
                            <option value="4">Telefono</option>
                        </InputSelect>
                    </div>
                    <div class="Form-group col-md-1"></div>

                    <div class="Form-group col-3">
                        <label>Criterio</label>
                        <InputText class="form-control" @bind-Value="Criterio"
                            placeholder="Ingrese el criterio de busqueda" />
                    </div>

                    <button type="button" class="btn btn-consulta" @onclick="Consultar" title="Consultar clientes">
                        <i class="oi oi-grid-four-up mr-2" /> Consultar
                    </button>
                </div>
                <hr>

                <div class="row">

                    <div class="Form-group col-2">
                        <span class="form-group ">Desde</span>
                        <InputDate @bind-Value="fechaDesde" class="form-control" />
                    </div>


                    <div class="Form-group col-2">
                        <span class="form-group">Hasta</span>
                        <InputDate @bind-Value="fechaHasta" class="form-control" />
                    </div>
                </div>
            </form>
        </div>
        

        <table class="table table-light table-striped table-bordered">
            <thead class="thead">
                <tr class="table">

                    <th>Id</th>

                    <th>Nombre</th>

                    <th>Email</th>

                    <th>Teléfono</th>

                    <th>
                        Celular
                        <div class="oi oi-phone"></div>
                    </th>

                    <th>
                        Dirección
                        <div class="oi oi-map-marker"></div>
                    </th>

                    <th>
                        Cédula
                        <div class="oi oi-credit-card"></div>
                    </th>


                    <th>Editar</th>

                </tr>
            </thead>
            <tbody>
                @if (lista.Count == 0)
                {
                    <td class="bg-colornohay">ㅤNo hay clientes registrados !</td>
                }
                else
                {
                    @foreach (var item in lista)
                    {
                        <tr>
                            <td>@item.ClienteId</td>

                            <td>@item.Nombre</td>

                            <td>@item.Email</td>

                            <td>@item.Telefono</td>

                            <td>@item.Celular</td>

                            <td>@item.Direccion</td>

                            <td>@item.Cedula</td>



                            <td>
                                <a type="button" class="rz-border-radius-1 shadow border border-1 btn-lg btn btn-primary"
                                    data-toggle="tooltip" data-placement="right" title="Editar informacion"
                                    href="clientes/@item.ClienteId">

                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                        class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path
                                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd"
                                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                    </svg>
                                </a>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</EditForm>

@code {

#nullable disable // Para quitar el aviso de nulls
    public string Filtro;
    public string Criterio;
    private DateTime fechaDesde { get; set; } = new DateTime(1970, 12, 2);
    private DateTime fechaHasta { get; set; } = new DateTime(2030, 12, 2);

    public DateOnly Fecha { get; set; }

    public List<Clientes> lista { get; set; } = new List<Clientes>();

    public Clientes cliente { get; set; } = new Clientes();


    [Inject]
    public ClientesBLL clienteBLL { get; set; }

    bool listado = false;


    protected override void OnInitialized()
    {
        Filtro = "0";
        lista = clienteBLL.GetList(e => true);
    }

    private void Consultar()
    {
        lista = new List<Clientes>();
        cliente = new Clientes();

        lista = clienteBLL.GetList(e => true);

        if (Criterio != null)
        {
            switch (Filtro)
            {
                case "0": // Id
                    lista = clienteBLL.GetList(e => e.ClienteId == int.Parse(Criterio));
                    break;

                case "1": // Nombre
                    lista = clienteBLL.GetList(p => p.Nombre.ToLower().Contains(Criterio.ToLower()));
                    break;
                case "2":
                    lista = clienteBLL.GetList(p => p.Email.ToLower().Contains(Criterio.ToLower()));
                    break;
                case "3":
                    lista = clienteBLL.GetList(p => p.Cedula.ToLower().Contains(Criterio.ToLower()));
                    break;
                case "4":
                    lista = clienteBLL.GetList(p => p.Telefono.ToLower().Contains(Criterio.ToLower()));
                    break;
            }
        }
        else
        {
            lista = clienteBLL.GetList(e => e.FechaNacimiento >= fechaDesde && e.FechaNacimiento <= fechaHasta);
        }
    }

}